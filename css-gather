#!/usr/bin/env ruby

# frozen_string_literal: true

require 'docopt'
require 'nokogiri'
require 'open-uri'

docs = <<~DOC
  Fetch CSS

  Usage:
    #{__FILE__} <url>
DOC

def main(url)
  doc = Nokogiri.HTML(URI.parse(url).open)
  stylesheets = doc.css('link[rel="stylesheet"]')
  stylesheets.each do |link|
    puts URI.parse(link['href']).open.read
  end
end

begin
  opts = Docopt.docopt(docs)
  main opts['<url>']
rescue Docopt::Exit => e
  puts e.message
  exit 1
end
